{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "rootDir": "."
  },
  "include": [
    "*.ts",
    "spec/**/*"
  ]
}
